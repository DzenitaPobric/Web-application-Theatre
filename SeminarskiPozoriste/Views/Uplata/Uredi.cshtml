@model UplataUrediVM
@{
    ViewData["Title"] = "UrediForm";
}
<h2 class="naslov">Uredi uplatu</h2>
<br />
<div class="okvir">
    <form asp-action="UrediSnimi" method="post">
        <input type="hidden" asp-for="UplataID" />

        <div class="form-group">
            <label class="label">Naziv</label>
            <input class="form-control" asp-for="Naziv" id="input" />
        </div>

        <div class="form-group">
            <label class="label">Iznos</label>
            <input class="form-control" asp-for="Iznos" id="input" />
        </div>

        <div class="form-group">
            <label class="label">Svrha</label>
            <input class="form-control" asp-for="Svrha" id="input" />
        </div>

        <div class="form-group">
            <label class="label">Sponzor</label>
            <select class="form-control" asp-for="sponzorID" asp-items="Model.Sponzor" id="input"></select>
        </div>


        <input type="submit" value="Sačuvaj" class="btn btn-danger" id="snimi" />
    </form>
    <br /><br />
    <a href="/Uplata/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>

</div>

