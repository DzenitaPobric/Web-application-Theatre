@model SjedistePrikaziVM

@{
    ViewData["Title"] = "Prikazi";
}

<h2>Sjedišta</h2>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Red</th>
            <th>Kolona</th>
            <th>Sala</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.lista)
        {
            <tr>
                <td>@x.Red</td>
                <td>@x.Kolona</td>
                <td>@x.NazivSale</td>
                <td>
                    <span id="confirmDeleteSpan_@x.SjedisteID" style="display:none">
                        <span>Da li ste sigurni da želite obrisati? </span>
                        <a asp-action="Obrisi" asp-route-id="@x.SjedisteID" class="btn btn-danger">DA</a>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@x.SjedisteID', false)">NE</a>
                    </span>

                    <span id="deleteSpan_@x.SjedisteID">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@x.SjedisteID', true)">Obriši</a>
                    </span>
                    <a class="btn btn-primary" asp-action="Uredi" asp-route-id="@x.SjedisteID"><i class="fas fa-edit"></i>  Uredi</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <script src="~/js/delete.js"></script>

</head>
<a class="btn btn-info" href="/Home/Index"><i class="fas fa-home"></i>  Početna</a>
<a class="btn btn-success" asp-action="Dodaj"><i class="fas fa-plus-circle"></i>  Dodaj novo</a>
