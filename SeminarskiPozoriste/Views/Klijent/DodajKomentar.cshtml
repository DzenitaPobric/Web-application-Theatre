@model KomentarDodajVM

@{
    ViewData["Title"] = "DodajKomentar";
    Layout = "~/Views/Shared/_LayoutKlijent.cshtml";

}


<head>
    <link rel="stylesheet" href="~/css/DodajForm.css">
</head>
<body style="background-color:whitesmoke">

    <br />
    <br />


    <div class="okvir">
        <span style="font-size:26px; font-style:oblique;font-weight:bold;margin-left:4%">
            Predstava: "@Model.predstava"
        </span>
        <br /><br /><br />

                    <form asp-action="SnimiKomentar" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Komentar.KomentarID" />
                        <input type="hidden" asp-for="Komentar.PredstavaID" />
                        <input type="hidden" asp-for="Komentar.KupacID" />

                        <div class="form-group">
                            <label class="label">Komentar</label>
                            <input asp-for="Komentar.Sadrzaj" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ovo je obavezno polje')"
                                   oninput="setCustomValidity('')" />

                        </div>

                        <input type="submit" value="Snimi" class="btn btn-danger" id="snimi" />
                        <br /><br />
                        <div>
                            <a class="btn btn-outline-info" asp-action="Predstava"> <i class="fas fa-arrow-circle-left"></i> Nazad</a>
                        </div>
                    </form>


    </div>
</body>